<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoTEC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/nav-side.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
  
</head>
<body>
    <header>


        <nav class="navbar navbar-expand-md navbar-light border-bottom fixed-top" style="background-color: #BFBFBF;">
            <div class="logo-image">
                <img class="img-fluid" src="~/images/logo-tec.png">
            </div>


            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="nav navbar-nav navbar">

                        <li class="nav-tabs">
                            @Html.ActionLink("Inicio", "Index", "Home")
                        </li>


                    </ul>
                </div>
            </div>
        </nav>

        <br />
        <br />
        <br />
        <div class="sidebar-container">

            <ul class="sidebar-navigation">
                <li class="active">
                    <a href="#comisionSubMenu" class="header dropdown-toggle" aria-expanded="false" data-toggle="collapse">
                        Comisión de Carrera Profesional
                    </a>
                    <ul id="comisionSubMenu">
                        <li>
                            @Html.ActionLink("Datos Personales", "CreatePersona", "Persona")
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#produccionUniversitariaSubMenu" class="header dropdown-toggle" aria-expanded="false" data-toggle="collapse">
                        Producción Universitaria
                    </a>
                    <ul id="produccionUniversitariaSubMenu">
                        <li>
                            @Html.ActionLink("Libros", "Index", "Libro")
                        </li>
                        <li>
                            @Html.ActionLink("Articulos", "CreateArticulo", "Articulo")
                        </li>
                        <li>
                            @Html.ActionLink("Desarrollo de Software", "Index", "DesarrolloSoftware")
                        </li>
                        <li>
                            @Html.ActionLink("Trabajo Graduacion Galardonado", "Index", "ProyectoGraduacionGalardonado")
                        </li>
                        <li>
                            @Html.ActionLink("Obra Administrativa de Desarrollo", "Index", "ObraAdministrativaDesarrollo")
                        </li>
                    </ul>
                </li>

            </ul>
        </div>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Comision de Carrera Profesional - <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
   
    <script src="~/Content/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
