@{
    ViewData["Title"] = "";
}
<h1>@ViewData["Title"]</h1>



<div class="content-container">

    <div class="container-fluid">

        <!-- Main component for a primary marketing message or call to action -->
        <div class="jumbotron">
            <h1>Artículos</h1>
            <br />

            <form>
                <div class="form-row">
                    <div class="form-group col-md-10">
                        <label for="inputEmail4">Nombre del articulo</label>
                        <input type="text" class="form-control" id="inputFunc" placeholder="Nombre del Articulo">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputPassword4">Nombre Autor</label>
                        <input type="text" class="form-control" id="inputCed" placeholder="Nombre del Autor">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputEmail4">Apellido</label>
                        <input type="text" class="form-control" id="inputFunc" placeholder="Apellido">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputEmail4">Apellido 2</label>
                        <input type="text" class="form-control" id="inputFunc" placeholder="Apellido 2">
                    </div>
                    <div class="form-group col-md-10">
                        <label for="inputEmail4">Año</label>
                        <input type="text" class="form-control" id="inputFunc" placeholder="Año">
                    </div>
                    <div class="form-group col-md-10">
                        <label for="inputEmail4">Editorial</label>
                        <input type="text" class="form-control" id="inputFunc" placeholder="Editorial">
                    </div>

                    <div class="form-group col-md-10">
                        <label for="inputState">Forma de Entrega</label>
                        <select id="inputState" class="form-control">
                            <option selected>Forma de Entrega</option>
                            <option>1</option>
                            <option>2</option>
                            <option>...</option>
                        </select>
                    </div>

                </div>


                <button type="submit" class="btn btn-info">Agregar otro articulo</button>
                <button type="submit" class="btn btn-primary">Aceptar</button>
            </form>

        </div>

    </div>
</div>