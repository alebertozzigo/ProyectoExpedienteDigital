@{
    ViewData["Title"] = "";
}
<h1>@ViewData["Title"]</h1>


<div class="content-container">

    <div class="container-fluid">

        <!-- Main component for a primary marketing message or call to action -->
        <div class="jumbotron">
            <h1>Obra Administrativa De Desarrollo</h1>
            <br />

            <form>
                <div class="form-row">
                    <div class="form-group col-md-5">
                        <label for="inputEmail4">Título de la Obra Didáctica</label>
                        <input type="text" class="form-control" id="inputNombreSoftware" placeholder="Título de la Obra Didáctica">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputState">Número de autores</label>
                        <select id="inputState" class="form-control">
                            <option selected>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">Tipo de obra</label>
                        <select id="inputState" class="form-control">
                            <option selected>
                                Desarrollo de nuevos servicios o actividades
                                de apoyo a la academia
                            </option>
                            <option>
                                Desarrollo e implementación de proyectos que racionalicen
                                significativamente los recursos de una unidad o de la Institución
                            </option>
                            <option>
                                Mejoramiento significativo de los servicios de una unidad
                                o de la Institución
                            </option>
                            <option>
                                Diseño, desarrollo e implementación de infraestructura
                                institucional especializada
                            </option>
                            <option>
                                Creación o modificación significativa de proyectos
                                productivos según la normativa institucional
                            </option>
                            <option>
                                Proyectos de creación o modificación significativa de la
                                reglamentación institucional aprobados por el Consejo Institucional
                                o la Asamblea Institucional Representativa
                            </option>
                            <option>
                                Informes finales de estudios que hayan permitido realizar
                                cambios en la reglamentación institucional
                            </option>
                            <option>
                                Ensayos técnicos sobre temas que tengan que ver con la
                                problemática institucional y que no son producto de la ejecución
                                de las labores del profesional
                            </option>
                            <option>
                                Trabajos de graduación a nivel de posgrado, que contribuyen
                                significativamente en el mejoramiento de servicios o racionalización
                                de recursos del ITCR
                            </option>
                            <option>
                                Otros a criterio de la Comisión siempre y cuando logren
                                mejorías significativas en los procesos o sistemas institucionales
                            </option>
                        </select>
                    </div>
                </div>
                <div class="container">
                    <div class="row clearfix">
                        <div class="col-md-12 column">
                            <table class="table table-bordered table-hover" id="tab_logic">
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            #
                                        </th>
                                        <th class="text-center">
                                            Nombre del autor
                                        </th>
                                        <th class="text-center">
                                            Correo electrónico
                                        </th>
                                        <th class="text-center">
                                            Distribución porcentual de autoría
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr id='autor0'>
                                        <td>
                                            1
                                        </td>
                                        <td>
                                            <input type="text" name='nombre0' placeholder='Nombre del autor' class="form-control" />
                                        </td>
                                        <td>
                                            <input type="text" name='mail0' placeholder='Correo electrónico' class="form-control" />
                                        </td>
                                        <td>
                                            <input type="text" name='dist0' placeholder='Distribución porcentual' class="form-control" />
                                        </td>
                                    </tr>
                                    <tr id='autor1'></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-5">
                        <p class="text-info">Cargar Obra Administrativa de Desarrollo:</p>
                        <input type="file" name="file">
                    </div>
                    <div class="form-group col-md-5">
                        <p class="text-info">Certificación del Superior Jerárquico:</p>
                        <input type="file" name="file">
                    </div>
                </div>
                <button type="submit" class="btn btn-info">Agregar otra obra</button>
                <button type="submit" class="btn btn-primary">Aceptar</button>
            </form>
        </div>

    </div>
</div>